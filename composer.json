{
  "name": "cerbos/cerbos-sdk-php",
  "homepage": "https://github.com/cerbos/cerbos-sdk-php",
  "description": "PHP SDK for interacting with the Cerbos PDP",
  "keywords": ["cerbos","pdp"],
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Cerbos",
      "homepage": "https://cerbos.dev"
    }
  ],
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cerbos\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cerbos\\Test\\": "tests"
    }
  },
  "support": {
    "issues": "https://github.com/cerbos/cerbos-sdk-php/issues"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require": {
    "ext-json": "*",
    "php": "^7.4 || ^8.0",
    "php-http/client-common": "^2.5",
    "psr/http-client": "^1.0",
    "psr/http-client-implementation": "*",
    "psr/http-factory": "^1.0",
    "ramsey/uuid": "^4.3"
  },
  "require-dev": {
    "laminas/laminas-diactoros": "^2.24",
    "nyholm/psr7": "^1.5",
    "php-http/curl-client": "^2.2",
    "php-parallel-lint/php-parallel-lint": "^v1.3",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "symfony/http-client": "^v6.2",
    "vimeo/psalm": "^4.3"
  }
}
