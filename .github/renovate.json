{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessageLowerCase": "never",
  "extends": [
":automergeDisabled",
    "config:recommended",
    ":gitSignOff",
    "group:allNonMajor",
    ":renovatePrefix",
    "schedule:monthly",
    ":semanticCommitTypeAll(chore)",
    ":separateMultipleMajorReleases"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "composer"
      ],
      "groupName": "PHP deps",
      "groupSlug": "php-deps"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions deps",
      "groupSlug": "gh-actions-deps"
    }
  ],
  "labels": [
    "kind/chore",
    "area/deps",
    "bots"
  ]
}
